@{
    ViewData["Title"] = "AddorUpdatePaymentMethod";
}
@model MetaOMS.ViewModels.PaymentVM

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrUpdatePaymentMethod" asp-route-id="@Model.PaymentVMId" onsubmit="return jQueryAjaxPost(this);">
            <input type="hidden" asp-for="PaymentVMId" />
            <div class="form-group">
                <input id="CurrentPage" type="hidden" asp-for="CurrentPage" />
                <label asp-for="PaymentVMMethod" class="control-label"></label>
                <div class="input-group">

                    <input asp-for="PaymentVMMethod" class="form-control" />
                </div>
                <span asp-validation-for="PaymentVMMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-success text-white btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>